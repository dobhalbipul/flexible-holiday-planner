# Environment Configuration for Multi-Gateway Payment System
# Copy this to .env and fill in your actual API keys

# Application Settings
APP_URL=http://localhost:5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=your_neon_database_url_here

# Stripe Configuration (International Payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Razer Pay Configuration (Malaysian Payments)
# Sign up at: https://pay.razer.com/
RAZER_MERCHANT_ID=your_razer_merchant_id_here
RAZER_VERIFY_KEY=your_razer_verify_key_here
RAZER_SECRET_KEY=your_razer_secret_key_here
RAZER_SANDBOX=true  # Set to false for production

# Touch 'n Go eWallet (Optional - Direct Integration)
# Note: Most TnG payments go through Razer Pay
TNG_API_KEY=your_tng_api_key_here
TNG_MERCHANT_ID=your_tng_merchant_id_here

# Amadeus API (Optional - for real flight/hotel data)
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# Payment Gateway Feature Flags
ENABLE_STRIPE=true
ENABLE_RAZER_PAY=true
ENABLE_TNG_DIRECT=false  # Set to true if you have direct TnG integration

# Security Settings
PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Client-side Environment Variables (exposed to frontend)
# These should be prefixed with VITE_ for Vite to include them
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here
VITE_APP_URL=http://localhost:5000
VITE_ENABLE_RAZER_PAY=true
VITE_ENABLE_QR_PAYMENTS=true
